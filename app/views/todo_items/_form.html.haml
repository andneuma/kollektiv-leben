.modal-dialog
  .modal-content
    .modal-header
      %button.close{"data-dismiss" => "modal", :type => "button"} ×
      %h2.modal-title= @todo_item.name || 'New todo item'
    = form_for [@todo_list, @todo_item], remote: true do |f|
      .modal-body
        .row
          .col-xs-12
            = f.text_field :name, placeholder: 'Name', class: 'form-control'
          .col-xs-6
            = f.text_field :start_date, placeholder: 'Start', class: 'form-control'
          .col-xs-6
            = f.text_field :end_date, placeholder: 'End', class: 'form-control'
          .col-xs-12
            = f.text_area :description, placeholder: 'Description', class: 'form-control'
      .modal-footer
        %button.btn.btn-default{'data-dismiss' => 'modal', type: 'button'} Schließen
        = f.submit 'Save', class: 'btn btn-success'
